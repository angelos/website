.banner
  - if @next_event
    %h2 Next event
    %h1= @next_event.title
    %h3= @next_event.start_time.strftime('%d-%m-%Y')

.updates
  .container
    .row
      .col-md-3.col-md-offset-1
        %h2 Upcoming events
        - @upcoming_events.each do |event|
          .update
            =link_to event.title, event_path(event)
            %p.date= event.start_time.strftime('%d-%m-%Y')

      .col-md-4
        %h2 News @devnologynl
        - @recent_tweets.each do |tweet|
          .update
            %p= tweet.text
            %p.date= tweet.date.strftime('%d-%m-%Y at %H:%M')

      .col-md-3
        %h2 Recent podcasts
        - @recent_podcasts.each do |podcast|
          .update
            =link_to podcast.title, podcast_path(podcast.guid)
            %p.date= "published on: #{podcast.pubDate.strftime('%d-%m-%Y')}"

.sponsors
  .container
    .row
      .col-md-2.col-md-offset-2
        = image_tag "qwan.png"
      .col-md-2.col-md-offset-1
        = image_tag "finalist.png"
      .col-md-2.col-md-offset-1
        = image_tag "macaw.png"
    .row
      .col-md-6.col-md-offset-3
        %h3 Devnology is a non-profit organisation and thus dependant on sponsors. We are very grateful to our sponsors. Thanks to our sponsors all Devnology events are free!
