%html
  %head
    %title Devnology
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %header
      .container
        .row
          .col-md-10.col-md-offset-1
            = link_to root_path do
              = image_tag "logo.png"

            %ul.nav.nav-pills.nav-underline.pull-right
              = menu_item(events_path, 'News')
              = menu_item(events_path, 'Events')
              = menu_item(podcasts_path, 'Podcasts')
              = menu_item(events_path, 'About us')

    %main
      = bootstrap_flash
      = yield
