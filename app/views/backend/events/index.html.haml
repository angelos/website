- if collection.any?
  %table.table.table-striped.events
    %thead
      %tr
        %th.date Date
        %th Title

    %tbody
      - collection.each do |event|
        %tr
          %td= event.start_time.strftime('%d-%m-%Y')
          %td= event.title
- else
  %p There are no events..

= link_to "Add event", new_backend_event_path, class: 'btn btn-default'
